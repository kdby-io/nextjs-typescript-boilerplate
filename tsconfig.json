{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "strict": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "rootDir": "src",
        "outDir": ".dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "types/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}